<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>결제창</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1 class="text-center">결제창</h1>

    <!-- 결제 예정금액 -->
    <p>총 상품 주문금액: <span class="total" id="total"></span></p>
    <p>할인 금액: <span id="discountAmount">0</span></p>
    <p>총 적립 금액: <span class="reward" id="rewardAmount"></span></p>
    <p>최종 결제 금액: <span class="final" id="total1"></span></p>
    <!-- 결제버튼 -->
    <button onclick="requestCardPayment()" class="btn btn-primary">카드결제</button>
    <button onclick="redirectToBankTransferPage()" class="btn btn-primary">무통장입금</button>
</div>

<script>
    // 페이지 로드 시 실행되는 함수
    window.onload = function () {
        // 세션에서 총 주문 금액과 할인 금액을 가져와서 동적으로 삽입
        var totalAmount = sessionStorage.getItem('totalAmount');
        var discountAmount = sessionStorage.getItem('discountAmount');
        var totalElements = document.getElementsByClassName('total');
        var discountElement = document.getElementById('discountAmount');
        var rewardElement = document.getElementById('rewardAmount');
        var finalElement = document.getElementById('total1');

        for (var i = 0; i < totalElements.length; i++) {
            totalElements[i].textContent = totalAmount;
        }

        // 할인 금액 표시
        discountElement.textContent = discountAmount;

        // 최종 결제 금액 계산
        var finalPaymentAmount = totalAmount - discountAmount;
        finalElement.textContent = finalPaymentAmount;

        // 총 적립 금액 계산
        var rewardAmount = finalPaymentAmount * 0.05; // 5%로 적립
        rewardElement.textContent = rewardAmount;

        // 아임포트에서 사용할 amount 값을 업데이트
        var amountField = document.querySelector("input[name='amount']"); // 아임포트 API에서 사용하는 amount 필드를 찾음
        amountField.value = finalPaymentAmount; // amount 필드의 값을 최종 결제 금액으로 업데이트
    };
</script>
<script>
    // 아임포트 초기화 및 카드결제 요청
    function requestCardPayment() {
        var finalPaymentAmount = parseFloat(document.querySelector('.final').textContent);
        var merchant_uid = 'merchant_' + new Date().getTime();

        IMP.init('iamport'); // 'iamport' 대신 자신의 가맹점 식별코드를 사용하세요
        IMP.request_pay({
            pg: "inicis", // PG사 선택 (예: "inicis" 또는 "kakaopay")
            pay_method: "card", // 결제 수단 선택 (예: "card", "trans", "vbank", "phone")
            merchant_uid: merchant_uid, // 고유 주문번호 생성
            name: 'joinair', // 상품명
            amount: finalPaymentAmount, // 결제 금액
            buyer_email: 'iamport@siot.do', // 구매자 이메일
            buyer_name: '구매자', // 구매자 이름
            buyer_tel: '010-1234-5678', // 구매자 전화번호
            buyer_addr: '서울특별시 강남구 삼성동', // 구매자 주소
            buyer_postcode: '123-456' // 구매자 우편번호
        }, function (rsp) {
            if (rsp.success) {
                var msg = '결제가 완료되었습니다.';
                alert(msg);
                location.href = "결제 완료 후 이동할 페이지 URL";
            } else {
                var msg = '결제에 실패하였습니다.';
                msg += '에러내용 : ' + rsp.error_msg;
                alert(msg);
            }
        });
    }

    // 무통장입금 버튼 클릭 시 페이지 이동
    function redirectToBankTransferPage() {
        // /payment/Deposit 페이지로 이동
        window.location.href = "/payment/Deposit";
    }
</script>
<!-- 결제 API 스크립트 추가 -->
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="https://cdn.iamport.kr/js/iamport.payment-1.1.5.js"></script>
</body>
</html>
